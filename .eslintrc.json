{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "script"
  },
  "env": {
    "node": true
  },
  "globals": {
    "condition": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "bracketSpacing": true,
        "trailingComma": "es5",
        "singleQuote": true
      }
    ]
  }
}
